#! /bin/sh

. $TS_GLOBAL

case "$1" in
init)
  if ! pkg_initialized $PACKAGE; then
    # Prime entropy pool for random number generation
    if ! is_disabled $RNGD ; then
	/sbin/rngd -t 5 -W 4096 -B 1
    fi
    pkg_set_init_flag $PACKAGE

  fi
  ;;
help)
    echo "Usage: $0 init"
    ;;
*)
    exit 1
    ;;
esac

exit 0
