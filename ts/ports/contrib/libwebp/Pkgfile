# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=libwebp
version=0.4.0
release=1
source=(https://webp.googlecode.com/files/libwebp-$version.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
			--sysconfdir=/etc \
			--mandir=/usr/man \
			--disable-static \
			--disable-extras

	make
	make DESTDIR=$PKG install
}
