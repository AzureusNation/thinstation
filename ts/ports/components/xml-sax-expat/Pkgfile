# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=xml-sax-expat
version=0.40
release=1
source=(http://search.cpan.org/CPAN/authors/id/B/BJ/BJOERN/XML-SAX-Expat-$version.tar.gz makefile-destdir.patch)

build() {
	cd XML-SAX-Expat-$version
	patch -Np1 < $SRC/makefile-destdir.patch

	perl Makefile.PL
	make
	make DESTDIR=$PKG install
        mv $PKG/usr/lib/perl5/5.18/linux-thread-multi/perllocal.pod $PKG/usr/lib/perl5/5.18/linux-thread-multi/perllocal.pod.expat

}
