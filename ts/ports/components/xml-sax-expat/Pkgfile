name=xml-sax-expat
version=0.40
release=1
source=(http://search.cpan.org/CPAN/authors/id/B/BJ/BJOERN/XML-SAX-Expat-$version.tar.gz)

build() {
	cd XML-SAX-Expat-$version

	perl Makefile.PL
	make
	make DESTDIR=$PKG install
        mv $PKG/usr/lib/perl5/5.16/linux-thread-multi/perllocal.pod $PKG/usr/lib/perl5/5.16/linux-thread-multi/perllocal.pod.expat

}
