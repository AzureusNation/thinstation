name=dnscrypt-proxy
version=1.3.0
release=1
source=()

build() {
	git clone --depth 1 https://github.com/opendns/dnscrypt-proxy.git
	cd $name

	./autogen.sh
	./configure --prefix=/usr \
			--exec-prefix=/ \
			--sysconfdir=/etc \
			--mandir=/usr/man \
			--disable-extras

	make
	make DESTDIR=$PKG install
}
