# Description: A free and open source (GPL) software media player and entertainment hub for digital media
# URL: http://xbmc.org/
# Depends on: boost, glew, libmad, libsamplerate, lzo, wavpack, libmpeg2, fribidi, libcdio, libmms, mysql, libmodplug, faad2, samba, sdl_mixer, jasper, sdl_image, enca, libmicrohttpd, yasm

name=xbmc
version=10.1
release=1
source=()

build() {
	git clone --depth 1 git://github.com/xbmc/xbmc.git
	cd $name
	./bootstrap
	./configure --prefix=/usr \
  --enable-libnfs \
  --enable-crystalhd \
  --enable-gl \
  --enable-sdl \
  --enable-vdpau \
  --enable-vaapi \
  --enable-joystick \
  --enable-xrandr \
  --enable-rsxs \
  --enable-projectm \
  --enable-x11 \
  --enable-rtmp \
  --enable-ffmpeg-libvorbis \
  --enable-dvdcss \
  --enable-avahi \
  --enable-webserver \
  --enable-libbluray \
  --enable-texturepacker \
  --enable-udev \
  --enable-libcec \
  --disable-depency-tracking \
  --enable-external-ffmpeg \
  --enable-external-libraries \
  --disable-debug \
  --enable-shared \
  --disable-static

	make
	make DESTDIR=$PKG install
}
