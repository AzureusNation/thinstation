name=inkscape
version=0.48.4
release=1
source=(http://iweb.dl.sourceforge.net/project/inkscape/inkscape/$version/inkscape-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
			--sysconfdir=/etc \
			--libexecdir=/lib \
			--mandir=/usr/man \

	make
	make DESTDIR=$PKG install
}
