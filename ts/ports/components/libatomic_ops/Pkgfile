# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=libatomic_ops
version=7.2e
release=1
source=( http://www.hpl.hp.com/research/linux/atomic_ops/download/$name-$version.tar.gz)

build() {
	cd $name-7.2

	sed -i 's#AM_CONFIG_HEADER#AC_CONFIG_HEADERS#' configure.ac
	sed -i 's#AC_PROG_RANLIB#AC_LIBTOOL_DLOPEN\nAC_PROG_LIBTOOL#' configure.ac
	sed -i 's#b_L#b_LTL#;s#\.a#.la#g;s#_a_#_la_#' src/Makefile.am
	sed -i 's#\.a#.so#g;s#\.\./src/#../src/.libs/#g' tests/Makefile.am
	sed -i 's#pkgdata#doc#' doc/Makefile.am
	autoreconf -fi

	./configure --prefix=/usr \
            --docdir=/usr/share/doc/libatomic_ops-7.2e \
            --disable-static &&

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share
}
