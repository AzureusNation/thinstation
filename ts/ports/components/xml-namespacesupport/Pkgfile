# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=xml-namespacesupport
version=1.11
release=1
source=(http://search.cpan.org/CPAN/authors/id/P/PE/PERIGRIN/XML-NamespaceSupport-$version.tar.gz)

build() {
	cd XML-NamespaceSupport-$version

	perl Makefile.PL
	make
	make DESTDIR=$PKG install
        mv $PKG/usr/lib/perl5/5.16/linux-thread-multi/perllocal.pod $PKG/usr/lib/perl5/5.16/linux-thread-multi/perllocal.pod.namespace
}
