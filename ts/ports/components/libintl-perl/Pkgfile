# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=libintl-perl
version=1.23
release=1
source=(http://search.cpan.org/CPAN/authors/id/G/GU/GUIDO/libintl-perl-${version}.tar.gz)

build() {
	cd $name-$version

	perl Makefile.PL

	make
	make DESTDIR=$PKG install
	mv $PKG/usr/lib/perl5/5.18/linux-thread-multi/perllocal.pod $PKG/usr/lib/perl5/5.18/linux-thread-multi/perllocal.pod.libintl
}
