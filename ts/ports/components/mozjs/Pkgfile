# Description: Thinstation essential package
# URL: http://meldmerge.org/
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=js
version=24.2.0
release=1
source=(http://ftp.mozilla.org/pub/mozilla.org/js/moz$name-$version.tar.bz2)

build() {
	cd moz$name$version

	cd js/src

	./configure --prefix=/usr \
			--with-system-nspr \
			--with-system-ffi  \
			--enable-threadsafe \
			--enable-readline

	make
	make DESTDIR=$PKG install
}
