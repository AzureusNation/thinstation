# Description: IBus - Intelligent Input Bus
# URL: http://code.google.com/p/ibus
# Maintainer: Shin Sterneck, shin at sterneck dot asia
# Depends on: iso-codes dbus-python gconf gtk

name=ibus
version=1.5.2
release=1
source=(http://ibus.googlecode.com/files/$name-$version.tar.gz)

build() {
	cd $name-$version

	sed -i -e "s/path=\"\/desktop\//path=\"\/org\/ibus\/desktop\//g" data/dconf/org.freedesktop.ibus.gschema.xml.in

	./configure --prefix=/usr
	make install DESTDIR=$PKG
}
