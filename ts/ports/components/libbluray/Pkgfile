# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=libbluray
version=0.5.0
release=1
source=(http://ftp.videolan.org/pub/videolan/$name/$version/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
			--disable-doxygen-doc \
			--disable-doxygen-dot \
			--disable-static

	make
	make DESTDIR=$PKG install
}
