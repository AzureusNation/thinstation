# Description: Hardware Volatile Entropy Gathering and Expansion
# URL: http://www.issihosts.com/haveged/haveged-1.6a.tar.gz
# Maintainer: 
# Packager: 
# Depends on: kernel-TS kernel-TS_SMP

name=haveged
version=1.9.1
release=1
source=(http://www.issihosts.com/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr --mandir=/usr/man --disable-static
	make
	make install DESTDIR=$PKG
}
