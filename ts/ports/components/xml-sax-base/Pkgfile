# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=xml-sax-base
version=1.08
release=1
source=(http://mirror.jmu.edu/pub/CPAN/authors/id/G/GR/GRANTM/XML-SAX-Base-$version.tar.gz)

build() {
	cd XML-SAX-Base-$version

	perl Makefile.PL
	make
	make DESTDIR=$PKG install
	mv $PKG/usr/lib/perl5/5.18/linux-thread-multi/perllocal.pod $PKG/usr/lib/perl5/5.18/linux-thread-multi/perllocal.pod.base
}
