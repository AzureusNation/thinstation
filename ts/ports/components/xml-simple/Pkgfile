name=xml-simple
version=2.20
release=1
source=(http://httpupdate40.cpanel.net/CPAN/authors/id/G/GR/GRANTM/XML-Simple-$version.tar.gz)

build() {
	cd XML-Simple-$version

	perl Makefile.PL
	make
	make DESTDIR=$PKG install
        mv $PKG/usr/lib/perl5/5.16/linux-thread-multi/perllocal.pod $PKG/usr/lib/perl5/5.16/linux-thread-multi/perllocal.pod.simple
}
