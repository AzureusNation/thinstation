name=libgee
version=0.14.0
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version

  ./configure --prefix=/usr --disable-static --enable-shared

  make
  make DESTDIR=$PKG install
}
