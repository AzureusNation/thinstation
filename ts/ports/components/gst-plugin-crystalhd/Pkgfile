# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=gst-plugin-crystalhd
version=git
release=2
source=(gst-Port-to-GStreamer-1.0-API.patch)

build() {
#export CFLAGS="$CFLAGS -Wno-error=unused-but-set-variable"
	git clone --depth 1 git://linuxtv.org/jarod/crystalhd.git
	cd crystalhd
	patch -Np1 < ../gst-Port-to-GStreamer-1.0-API.patch

	cd filters/gst/gst-plugin/
	./autogen.sh --disable-static
	make
        make DESTDIR=$PKG install
}
