name=opencryptoki
version=2.4.2
release=1
source=(http://downloads.sourceforge.net/project/opencryptoki/opencryptoki/$version/$name-$version.tar.gz)

build() {
	cd $name-$version
	./bootstrap.sh
	./configure --prefix=/usr \
			--sysconfdir=/etc \
			--mandir=/usr/man \
			--disable-extras

	make
	make DESTDIR=$PKG install
}
