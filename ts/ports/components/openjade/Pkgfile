# Description: An implementation of DSSSL -- Document Style Semantics and Specification Language.
# URL: http://openjade.sourceforge.net/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Diederick de Vries, diederick at diederickdevries.net
# Depends on: opensp

name=openjade
version=1.3.2
release=1
source=(http://downloads.sourceforge.net/project/$name/$name/${version}/$name-$version.tar.gz
	openjade-deplibs.patch
	openjade-nola.patch
	openjade-1.3.2-gcc46.patch
	openjade-getoptperl.patch)

build() {
	cd $name-$version

	patch -p1 -i $SRC/openjade-deplibs.patch
	patch -p1 -i $SRC/openjade-nola.patch
	patch -p1 -i $SRC/openjade-1.3.2-gcc46.patch
	patch -p1 -i $SRC/openjade-getoptperl.patch

	./configure \
		--prefix=/usr \
		--disable-nls \
		--disable-static

	make
	make DESTDIR=$PKG install
}
