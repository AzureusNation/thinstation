# Description: GTK2 interface to MPlayer (GNOME independent)
# URL:         http://code.google.com/p/gnome-mplayer/
# Maintainer:  Bartlomiej Palmowski, rotwang at crux dot org dot pl
# Packager:    Fredrik Rinnestam, fredrik at obra dot se
# Depends on:  gtk mplayer dbus-glib

name=gnome-mplayer
version=1.0.8
release=1
source=(http://$name.googlecode.com/files/$name-$version.tar.gz)

build() {
    cd $name-$version

    sed -i -e "s/path=\"\/apps\//path=\"\/org\/mplayer\/apps\//g" apps.gecko-mediaplayer.preferences.gschema.xml
    sed -i -e "s/path=\"\/apps\//path=\"\/org\/mplayer\/apps\//g" apps.gnome-mplayer.preferences.gschema.xml

   ./configure --prefix=/usr \
                --mandir=/usr/man \

    make
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/share/doc
    rm -rf $PKG/usr/share/locale
}
