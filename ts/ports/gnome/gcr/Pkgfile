# Description: The GNOME Control Center for GNOME 2
# URL:
# Maintainer: None
# Depends on: gnome-menus gnome-settings-daemon metacity libgnomekbd

name=gcr
version=3.12.2
release=1
source=(ftp://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version

	sed -i -e 's|/desktop/gnome/crypto/pgp|/org/gnome/crypto/pgp|g' schema/org.gnome.crypto.pgp.gschema.xml

        ./configure --prefix=/usr \
		--sysconfdir=/etc \
		--disable-nls \
		--enable-shared \
		--disable-static

	make
	make install DESTDIR=$PKG
	rm -rf $PKG/usr/share/gtk-doc
}
