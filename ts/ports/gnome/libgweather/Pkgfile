# Description: GNOME Library for Weather?
# URL: 
# Maintainer: None
# Depends on: gtk

name=libgweather
version=3.13.2
release=1
source=(ftp://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
			--disable-nls \
			--sysconfdir=/etc

	make
	make install DESTDIR=$PKG
	rm -rf $PKG/usr/share/gtk-doc
}
