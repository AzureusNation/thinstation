# Description: non-gui part of the library formerly known as gnome-libs
# URL: http://cvs.gnome.org/lxr/source/libgnome
# Maintainer: Matt Housh, jaeger at morpheus dot net
# Depends on: libxml2, libxslt, libbonobo, gnome-vfs, gconf, esound
# Group: gnome/platform

name=libgnome-media-profiles
version=3.0.0
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/libgnome-media-profiles/${version%.0}/libgnome-media-profiles-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--disable-gtk-doc \
		--disable-schemas-install \
		--disable-nls \
		--disable-static \
		--enable-shared \

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/{share/{locale,omf,gnome},var}
}
