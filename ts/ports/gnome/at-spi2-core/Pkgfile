# Description:	Interface for atk
# URL:		http://developer.gnome.org/libatspi/
# Maintainer:	Fredrik Rinnestam, fredrik at crux dot nu
# Depends on:	dbus, glib, intltool, xorg-libxtst

name=at-spi2-core
version=2.9.3
release=3
source=(http://ftp.gnome.org/pub/gnome/sources/at-spi2-core/${version%.*}/at-spi2-core-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
                    --libexecdir=/usr/libexec \
                    --disable-nls \
                    --disable-introspection

	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/gtk-doc
}
