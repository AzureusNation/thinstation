# Description: C++ interface for the popular glib library.
# URL: http://gtkmm.sourceforge.net/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Younes Hafri, ycrux at club-internet dot fr
# Depends on: gtk libsigc++

name=gsettings-desktop-schemas
version=3.12.2
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version

	sed -i -e "s/path=\"\/system\//path=\"\/org\/gnome\/system\//g" schemas/org.gnome.system.locale.gschema.xml.in.in
	sed -i -e "s/path=\"\/system\//path=\"\/org\/gnome\/system\//g" schemas/org.gnome.system.proxy.gschema.xml.in.in


	./configure \
		--prefix=/usr \
		--disable-dependency-tracking \
		--disable-nls

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/doc
}
