# Description: Object Activation Framework for GNOME 2
# URL: http://developer.gnome.org/doc/API/2.0/libbonobo/
# Maintainer: Matt Housh, jaeger at morpheus dot net
# Depends on: glib, orbit2, intltool, libxml2
# Group: gnome/platform

name=libbonobo
version=2.32.1
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/libbonobo/${version%.*}/$name-$version.tar.bz2)

build() {
	cd $name-$version
	rm po/*.po
	sed -i -e "s/USE_NLS=yes/USE_NLS=no/" \
		-e "s/ENABLE_NLS 1/ENABLE_NLS 0/" configure

	sed -i -e 's/-DG_DISABLE_DEPRECATED//g' activation-server/Makefile.am
        sed -i -e 's/-DG_DISABLE_DEPRECATED//g' activation-server/Makefile.in
        sed -i -e 's/-DG_DISABLE_DEPRECATED//g' configure
        sed -i -e 's/-DG_DISABLE_DEPRECATED//g' configure.in

	./configure --prefix=/usr \
		--mandir=/usr/man \
		--libexecdir=/usr/libexec \
		--disable-nls \
		--disable-gtk-doc \
		--disable-debug \
		--enable-bonobo-activation-debug=no \
		--disable-static \
		--enable-shared
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/gtk-doc
}
