# URL:
# Packager:
# Maintainer:

name=bbswitch
version=git
release=3.13.3
source=()

build() {
git clone git://github.com/Bumblebee-Project/bbswitch.git
    cd bbswitch

    mkdir -p $PKG/usr/include/linux

    for KERNELTYPE in TS TS_SMP
    do
       KVERSION=${release}$KERNELTYPE
       KCOMPDIR=${KERNELTYPE##TS}
       make KVERSION=$KVERSION
       MODDIR=$PKG/lib/modules/${KVERSION}/kernel/drivers/video

       mkdir -p $MODDIR
       cp -a ${name}.ko $MODDIR
    done
}

