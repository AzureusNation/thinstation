# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=compat-drivers
version=3.8.3-2-snpu
release=3.8.13
source=(http://www.kernel.org/pub/linux/kernel/projects/backports/stable/v${version%-*-*}/compat-drivers-$version.tar.bz2)

build() {
	cd $name-$version
	export REPORT_KERNEL=${release}TS_SMP
	./scripts/driver-select atlxx
	make
	modules="`find . -name alx.ko |cut -d "/" -f2-` `find . -name compat.ko |cut -d "/" -f2-`"
	ipath=$PKG/lib/modules/${release}TS_SMP/kernel
	for module in $modules; do
		mkdir -p $ipath/`dirname $module`
		cp $module $ipath/$module
	done
	make clean

	export REPORT_KERNEL=${release}TS
	./scripts/driver-select atlxx
	make
        modules="`find . -name alx.ko |cut -d "/" -f2-` `find . -name compat.ko |cut -d "/" -f2-`"
        ipath=$PKG/lib/modules/${release}TS/kernel
        for module in $modules; do
                mkdir -p $ipath/`dirname $module`
                cp $module $ipath/$module
        done
}
