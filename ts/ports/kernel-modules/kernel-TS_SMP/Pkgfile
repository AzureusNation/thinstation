# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=kernel-TS_SMP
pname=${name%-*}
version=3.8.12
sversion=3.8.12
release=1
source=(ftp://ftp.kernel.org/pub/linux/kernel/v3.x/linux-$sversion.tar.bz2 \
https://raw.github.com/mjanusz/homepage/master/projects/fbcondecor/fbcondecor-0.9.6-3.8.patch \
/usr/src/kernels/aufs/patches/aufs3.patch
ts.config)

build() {
export MAKEFLAGS="-j5"
	cd linux-$sversion
	cp $SRC/ts.config ./.config

	patch -p1 <../fbcondecor-0.9.6-3.8.patch
	patch -p1 < ../aufs3.patch

	make modules_prepare __headers
	mkdir -p $PKG/usr/src/kernels/${version}TS_SMP
	cp --parents `find -type f -name "Makefile*" -o -name "Kconfig*"` $PKG/usr/src/kernels/${version}TS_SMP
	rm -rf $PKG/usr/src/kernels/${version}TS_SMP/Documentation
	cp -a {include,scripts,.config} $PKG/usr/src/kernels/${version}TS_SMP
	cp -a arch/x86/include $PKG/usr/src/kernels/${version}TS_SMP/arch/x86
	rm $PKG/usr/src/kernels/${version}TS_SMP/scripts/{mod,kconfig}/*.o

	make -j5
	make INSTALL_PATH=$PKG install
	make INSTALL_MOD_PATH=$PKG modules_install

	cp -a Module.symvers System.map $PKG/usr/src/kernels/${version}TS_SMP

	cd $PKG
        mkdir -p $PKG/boot
	mv vmlinuz $PKG/boot/vmlinuz-${version}TS_SMP
	mv System.map $PKG/boot/System.map-${version}TS_SMP
	cp $SRC/linux-$sversion/.config $PKG/boot/config-${version}TS_SMP
#	echo ${version}TS_SMP >$PKG/boot/KERNEL_VERSION

        rm lib/modules/${version}TS_SMP/{source,build}
	ln -sf /usr/src/kernels/${version}TS_SMP $PKG/lib/modules/${version}TS_SMP/build
	ln -sf build $PKG/lib/modules/${version}TS_SMP/source
	ln -sf . $PKG/usr/src/kernels/${version}TS_SMP/build
	rm $PKG/lib/modules/${version}TS_SMP/modules.{alias,alias.bin,builtin.bin,dep,dep.bin,devname,softdep,symbols,symbols.bin}
	rm -rf $PKG/lib/firmware
}
