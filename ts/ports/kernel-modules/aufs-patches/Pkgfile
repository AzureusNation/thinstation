# Description:  Advanced Unification Filesystem Patches
# URL:          http://aufs.sourceforge.net/
# Packager:     
# Maintainer:   

name=aufs-patches
version=3.9
release=1
source=()

build() {
git clone git://git.code.sf.net/p/aufs/aufs3-standalone \
	$name
    cd $name
    git checkout aufs$version

    mkdir -p $PKG/usr/src/kernels/aufs/patches
    cat aufs3-base.patch aufs3-proc_map.patch aufs3-standalone.patch > $PKG/usr/src/kernels/aufs/patches/aufs3.patch
}

