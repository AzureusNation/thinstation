name=accountsservice
version=0.6.30
release=1
source=(http://www.freedesktop.org/software/accountsservice/accountsservice-$version.tar.xz)

build() {
	cd accountsservice-$version

	./configure --prefix=/usr \
			--disable-gusb

	make
	make DESTDIR=$PKG install

}
