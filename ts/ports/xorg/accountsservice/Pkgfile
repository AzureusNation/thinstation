name=accountsservice
version=0.6.35
release=1
source=(http://www.freedesktop.org/software/accountsservice/accountsservice-$version.tar.xz)

build() {
	cd accountsservice-$version

	./configure	--prefix=/usr \
			--localstatedir=/var \
			--sysconfdir=/etc \
			--disable-static \
#			--enable-systemd

	make
	make DESTDIR=$PKG install

}
