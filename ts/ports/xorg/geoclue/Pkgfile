# Description: A modular geoinformation service.
# URL: http://geoclue.freedesktop.org/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Danny Rawlins, monster dot romster at gmail dot com
# Depends on: gconf gtk-doc

name=geoclue
version=0.12.0
release=1
source=(https://launchpad.net/geoclue/trunk/${version%.*}/+download/$name-$version.tar.gz)

build() {
	cd $name-$version

	sed -i "s@ -Werror@@" configure &&
	sed -i "s@libnm_glib@libnm-glib@g" configure &&
	sed -i "s@geoclue/libgeoclue.la@& -lgthread-2.0@g" \
	       providers/skyhook/Makefile.in

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-static

	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/gtk-doc
}
