# Description: Modem Manager with NetworkManager support
# URL:         https://launchpad.net/modemmanager
# Maintainer:  None
# Depends on:  ppp gudev dbus-glib


name=modemmanager
version=0.7.991
release=1
source=(http://ftp.acc.umu.se/pub/GNOME/sources/ModemManager/${version%.*}/ModemManager-$version.tar.xz)

build() {
	cd ModemManager-$version

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-polkit
	make
	make DESTDIR=$PKG install
}
