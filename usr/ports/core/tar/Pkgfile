# Description: GNU tar
# URL:         http://www.gnu.org/software/tar/tar.html
# Maintainer:  CRUX System Team, core-ports at crux dot nu

name=tar
version=1.27.1
release=2
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz \
        $name-rootp.patch $name-$version-manpage-1.patch rmt.8)

build() {
    cd $name-$version
    #Not sure what this patch does, so disabling for now
    #patch -p1 -i $SRC/$name-rootp.patch
    #Adds a file to generate the manpage for tar from the source
    patch -Np1 -i $SRC/$name-$version-manpage-1.patch
    ./configure --prefix= \
                --libexec=/usr/lib/tar \
                --disable-nls \
		FORCE_UNSAFE_CONFIGURE=1
    make
    make DESTDIR=$PKG install
    rm -rf $PKG/{sbin,share}
    mkdir -p $PKG/usr/man/man1
    perl tarman > $PKG/usr/man/man1/tar.1
    install -D -m 644 $SRC/rmt.8 $PKG/usr/man/man8/rmt.8
}
