# Description: ALSA utils
# URL: http://www.alsa-project.org/
# Maintainer: Matt Housh, jaeger at morpheus dot net
# Depends on: gettext, alsa-lib, dialog

name=alsa-utils
version=1.0.27.2
release=1
source=(ftp://ftp.alsa-project.org/pub/utils/$name-$version.tar.bz2 \
	rc.alsa)

build() {
	cd $name-$version

	sed -i -e 's/oneshop/oneshot/g' alsactl/alsa-restore.service.in

	./configure	--prefix=/usr \
			--disable-nls \
			--mandir=/usr/man

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/man/fr
	install -D -m 0755 $SRC/rc.alsa $PKG/etc/rc.d/alsa
	rm -rf $PKG/lib/systemd
}
